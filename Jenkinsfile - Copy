pipeline {
  environment {
    dockerimagename = "lightbulb233/php7.4.33-apache"
    dockerImage = ""
  }
  agent any
  stages {
    stage('Checkout Source') {
      steps {
        git branch: 'main', url: 'https://github.com/jflores233/sample-php.git'
      }
    }
    stage('Build image') {
      steps{
        script {
          dockerImage = docker.build dockerimagename
        }
      }
    }
    stage('Pushing Image') {
      environment {
          registryCredential = 'dockerhub-credentials'
           }
      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerImage.push("latest")
          }
        }
      }
    }
	
	stage('Deploy to Kubernetes') {
      steps {
      container(name: 'kubectl', shell: '/bin/sh') {
        withCredentials([file(credentialsId: 'k3s-token', variable: 'KUBECONFIG')]) {
          sh "echo $KUBECONFIG > /var/jenkins_home/.kube/config"
          sh "kubectl apply -f manifest.yaml"
          }
        }
      }
    }
	
    stage('Deploying to K3S') {
      steps {
        script {
          kubernetesDeploy(configs: "php-sample.yaml", 
                                         "service.yaml")
        }
      }
    }
  }
}